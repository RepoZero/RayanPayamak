<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    tools:context="ir.rayanpayamak.UI.Settings"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/Settings_Lin_TypeUser"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/main_shape"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/Settings_Txt_TypeUserTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="نوع کاربر"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Settings_Radio_Legal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="حقوقی"
                        android:textColor="#fff"
                        android:textSize="25dp" />

                    <RadioButton
                        android:id="@+id/Settings_Radio_Real"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="حقیقی"
                        android:textColor="#fff"
                        android:textSize="25dp" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/Settings_Txt_DescriptionCoercion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="* تمامی فیلد ها به جز ایمیل اجباری هستند ."
                android:textColor="#f00"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/Settings_Lin_Person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/main_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Settings_Txt_PersonTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="مشخصات کاربر حقیقی"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/Settings_Edt_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="نام"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_Family"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="نام خانوادگی"
                    android:inputType="textPersonName"
                    android:maxLength="35"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_NationalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="کدملی"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_RealEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="ایمیل"
                    android:inputType="textEmailAddress"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Settings_Txt_NationalCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/Settings_Btn_NationalCard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:background="#36a2a2"
                            android:gravity="center"
                            android:text="عکس کارت ملی"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Settings_Txt_BirthCertificate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/Settings_Btn_BirthCertificate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:background="#36a2a2"
                            android:gravity="center"
                            android:text="عکس شناسنامه"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Settings_Txt_Bill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/Settings_Btn_Bill"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:background="#36a2a2"
                            android:gravity="center"
                            android:text="عکس قبض"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/Settings_Lin_Commercial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/main_shape"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Settings_Txt_CommercialTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="مشخصات کاربر حقوقی"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/Settings_Edt_CompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="نام شرکت"
                    android:inputType="textPersonName"
                    android:maxLength="80"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_CompanyNationId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="شناسه ملی شرکت"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_EconomicCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="کد اقتصادی شرکت"
                    android:inputType="number"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_CompanyPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="تلفن شرکت"
                    android:inputType="phone"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_CompanyPostalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="کد پستی شرکت"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_ManagerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="نام مدیر شرکت "
                    android:inputType="textPersonName"
                    android:maxLength="60"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_ManagerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="شماره تلفن مدیر شرکت"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_ManagerNationalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="کدملی مدیر شرکت"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/Settings_Edt_legalEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_gray_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="ایمیل"
                    android:inputType="textEmailAddress"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Settings_Txt_Foundation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/Settings_Btn_Foundation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:background="#36a2a2"
                            android:gravity="center"
                            android:text="عکس آگهی تاسیس شرکت"
                            android:textColor="#fff"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Settings_Txt_Newspaper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/Settings_Btn_Newspaper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:background="#36a2a2"
                            android:gravity="center"
                            android:text="عکس روزنامه شرکت"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
